@model List<AttendanceSystemFinal.Models.Attendance>


<div class="container-fluid">
    <div class="card mb-4">
        <div class="card-header"><i class="fas fa-table mr-1"></i>All Students attendances</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable"  cellspacing="0">
                    <thead>
                        <tr>
                            @*<th>Id</th>*@
                            <th>student name</th>
                            <th>date</th>
                            <th>Attend time</th>
                            <th>Exit Time</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count(); i++)
                        {

                            <tr>
                                @*<td>@Model[i].id</td>*@
                                <td>@ViewBag.stds[i].stdName</td>
                                <td>@Model[i].date</td>
                                <td>@Model[i].attTime</td>
                                <td>@Model[i].exitTime</td>
                                <td>@ViewBag.status[i]</td>

                               
                            </tr>

                        }
                    </tbody>
                </table>

            
            </div>
        </div>
    </div>
</div>

