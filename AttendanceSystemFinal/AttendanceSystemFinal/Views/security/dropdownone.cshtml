
@{
    ViewBag.Title = "dropdownone";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="layoutSidenav_content">
<main>
    <div class="container-fluid">
        <h1 class="mt-4">Take Attendance</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/Home/index">Home</a></li>
            <li class="breadcrumb-item active">Take Attendance</li>
        </ol>
        <div class="card mb-4">
            <div class="card-body">

                @Html.Label("Choose Attend or Exit", new { @class = "lg mb-1" })

                @Html.DropDownList("items", null, null, new { @class = "btn btn-danger dropdown-toggle" })
                <div id="div1">



                </div>

            </div>

        </div>
    </div>
</main>
    </div>
  



@section scripts{


    <script>
        $("#items").on("change", a => {

            //  alert($("#department").val());
            var id = $("#items").val();
            if (id == 2) {
                $("#div1").load("/security/index/");
            }
            else if (id == 3) {
                $("#div1").load("/Exit/index");
            }

        })


    </script>

}
