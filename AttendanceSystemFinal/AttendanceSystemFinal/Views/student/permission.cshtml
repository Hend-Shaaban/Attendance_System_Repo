
@model AttendanceSystemFinal.Models.permission

@{
    ViewBag.Title = "permission";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4"> Request a permission</h3></div>
                                <div class="card-body">
           @using (Html.BeginForm())
            {
                                        @Html.AntiForgeryToken()

                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            @Html.Label("Student name", new { @class = "small mb-1" })
                                            @Html.TextBox("Student name", (string)ViewBag.stdname, htmlAttributes: new { @class = "form-control py-4", })

                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Department", new { @class = "small mb-1" })

                                            @Html.TextBox("Department",(string)ViewBag.deptname , htmlAttributes: new { @class = "form-control py-4", })
                                         </div>
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.date, htmlAttributes: new { @class = "small mb-1" })
                                            @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control datapiker form-control py-4" } })
                                        </div>
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.note, htmlAttributes: new { @class = "small mb-1" })
                                                @Html.EditorFor(model => model.note, new { htmlAttributes = new { @class = "form-control" } })
                                                 @Html.ValidationMessageFor(model => model.note, "", new { @class = "text-danger" })
                                             </div>
                                            <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                              <button class="btn btn-primary" type="submit">Save</button>
                                            </div>

           }
                                        </div>

                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>

    </div>
</div>


        @section Scripts {

        <script type="text/javascript">
        $(function () {
            $(".datapiker").datetimepicker({
                dateFormat: "yy-mm-dd",
                timeFormat: "hh:mm:ss"
            });
        });

        </script>
    @Scripts.Render("~/bundles/jqueryval")
}



